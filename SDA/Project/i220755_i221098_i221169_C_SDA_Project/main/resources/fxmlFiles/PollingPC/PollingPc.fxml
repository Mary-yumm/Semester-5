<AnchorPane xmlns:fx="http://javafx.com/fxml/1" fx:controller="votix.controllers.PollingPC.PollingPcController" stylesheets="@../../style/style.css">
    <!-- Main content area (dynamic content) -->
    <AnchorPane fx:id="contentPane" prefHeight="915.0" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0"/> <!-- Adjust height as needed -->

    <!-- Bottom navigation bar -->
    <HBox prefHeight="100.0" spacing="20.0" alignment="CENTER" style="-fx-background-color: #385B4F; -fx-padding: 0; -fx-hgap: 10;" AnchorPane.bottomAnchor="0" AnchorPane.leftAnchor="0" AnchorPane.rightAnchor="0">
        <!-- Buttons now use the button style class and fx:id for control -->
        <Button fx:id="tab1Button" text="Capture Voter Info" styleClass="button" onAction="#selectTab1" prefHeight="40"/>
        <Button fx:id="tab3Button" text="Polling Station Info" styleClass="button" onAction="#selectTab3" prefHeight="40"/>
    </HBox>
</AnchorPane>
